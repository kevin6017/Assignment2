package DiceGame;

import java.util.Scanner;

public class DieGame04Pig
{

    public static void main(String[] args)
    {
        Scanner userInput = new Scanner(System.in);

        String userDecission = null;

        //Declaring 2 Player Objects

        Player p1 = new Player(0);
        Player p2 = new Player(0);

        //Declaring Die Object
        Die die = new Die(6);

        System.out.println("Lets Play PIG....");
        System.out.println("Player 1 Press r to Roll :");
        userDecission = userInput.next();
        System.out.println("");

        while (p1.getScore() <= 100 && p2.getScore() <= 100)
        {
            while ("r".equals(userDecission))
            {
                die.throwDice();

                if (die.getFaceValue() != 1)
                {
                    p1.incScore(die.getFaceValue());
                    System.out.println("You Rolled a " + die.getFaceValue());
                    System.out.println("Press 'r' to Roll Again or 'h' to Hold and Pass On ");
                    userDecission = userInput.next();
                    System.out.println();
                }
                else if (die.getFaceValue() == 1)
                {  
                    if (die.getFaceValue() == 1)
                    {
                        p1.setScore(0);
                        userDecission = "h";
                    }
                    else
                    {
                        userDecission = "h";
                    }
                }
                
                System.out.println("The Player1  Total Is: " + p1.getScore());
                System.out.println();
                        
                        
            }
            
            while("h".equals(userDecission))
            {
                die.throwDice();
                p2.incScore(die.getFaceValue());
                System.out.println("You Rolled a " + die.getFaceValue());
                System.out.println();
                
                if(die.getFaceValue() != 1)
                {
                    System.out.println("Press 'r' to Roll Again or 'h' to Hold and Pass On ");
                    userDecission = userInput.next();
                    
                }
                else if (die.getFaceValue() == 1)
                {  
                    if (die.getFaceValue() == 1)
                    {
                        p2.setScore(0);
                        userDecission = "h";
                    }
                    else
                    {
                        userDecission = "h";
                    }
                }
                
                System.out.println("The Player2 Total Is: " + p2.getScore());
                System.out.println();
                
            }
        }
    }
}
